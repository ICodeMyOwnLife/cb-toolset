{
  "name": "cb-toolset",
  "version": "0.8.0",
  "description": "Common tiny reusable snippets and types",
  "author": "Hien CB",
  "repository": {
    "type": "git",
    "url": "https://github.com/ICodeMyOwnLife/cb-toolset.git"
  },
  "license": "MIT",
  "source": "src/index.ts",
  "files": [
    "common/",
    "common.mjs",
    "dom/",
    "dom.mjs",
    "function/",
    "function.mjs",
    "list/",
    "list.mjs",
    "math/",
    "math.mjs",
    "object/",
    "object.mjs",
    "promise/",
    "promise.mjs",
    "string/",
    "string.mjs"
  ],
  "scripts": {
    "build": "rollup -c configs/rollup.config.ts --configPlugin 'rollup-plugin-typescript2={tsconfig: \"configs/tsconfig.json\"}'",
    "build:config": "tsc -p rollup",
    "commit": "git-cz",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "prepublishOnly": "yarn build",
    "release": "release-it --ci",
    "size": "size-limit",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "typescript": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-generic-ts": "^2.1.3",
    "husky": "^7.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "release-it": "^14.11.5",
    "rollup": "^2.56.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "size-limit": "^7.0.5",
    "ts-jest": "^27.0.5",
    "tslib": "^2.0.0",
    "typescript": "^4.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix"
    ],
    "{*.{json,md}}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
